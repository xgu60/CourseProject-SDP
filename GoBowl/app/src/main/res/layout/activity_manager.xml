<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.gatech.seclass.gobowl.activities.ManagerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome Manager!"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="What would you like to do?"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Add a new customer"
        android:id="@+id/buttonManagerAddCustomer"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:onClick="buttonManagerAddCustomer_onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Print a customer card"
        android:id="@+id/buttonManagerPrintCustomerCard"
        android:layout_below="@+id/buttonManagerEditCustomer"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:onClick="buttonManagerPrintCustomerCard_onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Edit a Customer&apos;s Information"
        android:id="@+id/buttonManagerEditCustomer"
        android:layout_below="@+id/buttonManagerAddCustomer"
        android:layout_centerHorizontal="true"
        android:onClick="buttonManagerEditCustomer_onClick" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:columnCount="1"
        android:rowCount="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/buttonManagerCancel"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="left"
            android:onClick="buttonManagerCancel_onClick" />
    </GridLayout>
</RelativeLayout>
