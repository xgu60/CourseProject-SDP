<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.gatech.seclass.gobowl.activities.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Who are you?"
        android:id="@+id/textView"
        android:layout_above="@+id/buttonManager"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="I&apos;m the manager"
        android:id="@+id/buttonManager"
        android:layout_above="@+id/buttonCustomer"
        android:layout_centerHorizontal="true"
        android:onClick="buttonManager_onClick" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="I&apos;m a Customer"
        android:id="@+id/buttonCustomer"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="buttonCustomer_onClick" />
</RelativeLayout>
