<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.gatech.seclass.gobowl.activities.LaneCheckoutSaveScoresPromptActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Do any players wish to save their scores?"
        android:id="@+id/textView29"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:id="@+id/buttonYesSave"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="right"
        android:layout_above="@+id/buttonNoSave"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="buttonYesScoring_onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:id="@+id/buttonNoSave"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/buttonYesSave"
        android:layout_alignStart="@+id/buttonYesSave"
        android:onClick="buttonNoScoring_onClick" />
</RelativeLayout>
